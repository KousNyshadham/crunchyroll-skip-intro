{
    "manifest_version": 2,
    "name": "Skiproll",
    "version": "1.0",
    "description":"Skip openings/recaps/both on Crunchyroll anime",
    "icons":{
        "16":"icons/icon16.png",
        "48":"icons/icon48.png",
        "128":"icons/icon128.png"
    },
	"content_scripts":[
		{
			"matches": ["*://*.crunchyroll.com/*"],
            "run_at": "document_end",
			"js":["content.js"]
		}
    ],
    "permissions":["*://*.crunchyroll.com/*"],
    "web_accessible_resources":[
        "script.js"
    ]
}
